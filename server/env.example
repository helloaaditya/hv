# MongoDB Connection
MONGO_URI=your_mongodb_connection_string_here

# JWT Secret for Admin Authentication
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration for Lead Notifications
# Choose ONE of the following options:

# Option 1: Gmail with App Password (requires 2FA enabled)
# 1. Enable 2-Factor Authentication: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
NOTIFY_EMAIL=your_email@gmail.com
NOTIFY_EMAIL_PASS=your_gmail_app_password_here

# Option 2: Gmail with OAuth2 (no app password needed)
# 1. Go to Google Cloud Console: https://console.cloud.google.com/
# 2. Create a project and enable Gmail API
# 3. Create OAuth2 credentials
# 4. Get refresh token using the OAuth2 playground
# NOTIFY_EMAIL=your_email@gmail.com
# GOOGLE_CLIENT_ID=your_client_id_here
# GOOGLE_CLIENT_SECRET=your_client_secret_here
# GOOGLE_REFRESH_TOKEN=your_refresh_token_here

# Option 3: Outlook/Hotmail
# NOTIFY_EMAIL=your_email@outlook.com
# NOTIFY_EMAIL_PASS=your_outlook_password_here

# Option 4: Yahoo
# NOTIFY_EMAIL=your_email@yahoo.com
# NOTIFY_EMAIL_PASS=your_yahoo_password_here

# Server Port
PORT=5000 